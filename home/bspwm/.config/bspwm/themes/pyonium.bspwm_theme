#!/bin/bash
# pyonium theme
# named so for the redditor who I got the term colors used here from.

THEME_NAME=pyonium

# vim theme name
VIM_COLORS=mustang

# termite theme name
TERMITE_CONFIG=pyonium

# Background command
export BG_COMMAND='feh --bg-fill /home/neeasade/images/dunes.jpg'

. ~/.config/bspwm/themes/base.bspwm_theme $TERMITE_CONFIG

# bspwm
b_border_width=8
b_window_gap=20
b_split_ratio=0.6

# panel
PANEL_HEIGHT=30
PANEL_GAP=6
cContent="%{F#ffbbbbbb}"                    # Color of content next to information icons

# Workspace variables
DO=$(echo -e '\uf111')  # occupied desktop
DF=$(echo -e '\uf10c')  # free desktop
