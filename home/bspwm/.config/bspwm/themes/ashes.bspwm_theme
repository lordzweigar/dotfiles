#!/bin/bash
# ashes theme(from base16)

THEME_NAME=ashes

# vim theme name
VIM_COLORS=base16-ashes

# termite theme name
export TERMITE_CONFIG=ashes

# Background command
export BG_COMMAND='feh --bg-fill /home/neeasade/images/forest.jpg'

. ~/.config/bspwm/themes/base.bspwm_theme $TERMITE_CONFIG

# bspwm
b_border_width=3
b_window_gap=10
b_split_ratio=0.6

# Panel
PANEL_HEIGHT=30
PANEL_GAP=4

# Workspace variables
DO=$(echo -e '\uf0c8')  # occupied desktop
DF=$(echo -e '\uf096')  # free desktop
