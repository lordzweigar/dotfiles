URxvt.saveLines:32767
URxvt.scrollBar: false

urxvt*font: xft:Dejavu Sans Mono for Powerline:pixelsize=12,style=regular
urxvt*boldFont: xft:Dejavu Sans Mono for Powerline:pixelsize=12,style=regular

Xft.antialias: 1
Xft.autohint: 0
Xft.dpi: 96
Xft.hinting: 1
Xft.hintstyle: hintfull
Xft.lcdfilter: lcddefault
Xft.rgba: rgb

! uncomment the below to fix really wide spacing with truetype fonts
URxvt.letterSpace: -1

URxvt.perl-ext-common:      default,clipboard,url-select,keyboard-select
URxvt.url-select.launcher:  chromium
URxvt.url-select.underline: true
URxvt.keysym.M-u:           perl:url-select:select_next
URxvt.keysym.M-Escape:      perl:keyboard-select:activate
URxvt.keysym.M-s:           perl:keyboard-select:search
URxvt.urgentOnBell:         true
URxvt.internalBorder:         5

URxvt.iso14755 : false
URxvt.keysym.C-C: perl:clipboard:copy
URxvt.keysym.C-V: perl:clipboard:paste

