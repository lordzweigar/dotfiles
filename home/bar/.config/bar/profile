#!/bin/sh

#settings to be used in bar files.
PANEL_FIFO=/tmp/panel-fifo
PANEL_HEIGHT=24
#Terminus for main font, dejavu for the unicode characters.
PANEL_FONT_FAMILY="-xos4-terminus-*-r-*-*-*-*-*-*-*-*-*-1,-misc-dejavu sans mono-medium-r-normal--11-*-*-*-m-*-iso10646-1"
PANEL_GAP=8


if [ "$BSPWM_GAPS" = false ]; then
    PANEL_GAP=0
fi

export PANEL_FIFO PANEL_HEIGHT PANEL_FONT_FAMILY PANEL_GAP

