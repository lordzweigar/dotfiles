#!/bin/sh
# profile
# Set values to be referenced in other bar scripts.

# get the value of a color from the current xrdb load configuration
getXresColor() {
    echo -n "$( xrdb -query | grep  "\*.$1:" | grep -oE "#[a-zA-Z0-9]{6}" | cut -c 2- )";
}

# Panel display settings
PANEL_FIFO=/tmp/panel-fifo
PANEL_HEIGHT=22
PANEL_FONT_FAMILY="Dejavu Sans-8"
PANEL_GAP=8
# Character width to use with slant fork. If using vanilla lemonbar set this to 0.
pSLANT=5

# Panel colors
pBGS1="%{B#ff$(getXresColor color0)}"
pBGS2="%{B#ff$(getXresColor color8)}"
pFG="%{F#ff$(getXresColor foreground)}"
pTAB="%{B#ff303030}"
pBG=$pBGS1

# Workspace colors
pUrgent=#ffffff00
pActive=#ff$(getXresColor color15)
pRest=#ff$(getXresColor color6)

# Workspace variables
DO='▪'              # occupied desktop
DF='▫'              # free desktop
DT='◫'              # tiling mode desktop
DM='□'              # monocle mode desktop


# Export variables and set gap if needed
[ "$BSPWM_GAPS" = false ] && PANEL_GAP=0
export PANEL_FIFO PANEL_HEIGHT PANEL_FONT_FAMILY PANEL_GAP
export pBGS1 pBGS2 pFG pBG pTAB pSLANT
export pUrgent pActive pRest
export DO DF DT DM


